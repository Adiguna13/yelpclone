<% layout('layouts/app') %>
<div class="row">
  <div class="col-6">
    <div class="card">
      <img
        src="<%= place.image %>"
        alt="<%= place.title %>"
        class="card-img-top"
      />
      <div class="card-body">
        <h5 class="card-title"><%= place.title %></h5>
        <p class="card-text"><%= place.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= place.location %></li>
        <li class="list-group-item"><%= place.price %></li>
      </ul>
      <div class="card-body">
        <a
          href="/places/<%= place._id %>/edit"
          class="card-link btn btn-warning text-white"
          >Edit</a
        >
        <form
          action="/places/<%= place._id %>?_method=DELETE"
          method="POST"
          style="display: inline !important"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-6">
    <h3>Leave a review</h3>
    <form
      action="/places/<%= place._id %>/reviews"
      method="POST"
      class="validated-form"
      novalidate
    >
      <div class="mb-3">
        <label for="rating">Rating: *<span id="ratingDisplay">3</span></label>
        <input
          type="range"
          name="review[rating]"
          id="rating"
          class="form-range"
          min="1"
          max="5"
          oninput="updateRating(this.value)"
        />
      </div>

      <div class="mb-3">
        <label for="review">Review</label>
        <textarea
          name="review[body]"
          id="body"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please fill out this field!</div>
      </div>
      <button class="btn btn-success" type="submit">Submit</button>
    </form>
  </div>
</div>
<script>
  function updateRating(value) {
    document.getElementById("ratingDisplay").textContent = value;
  }
</script>
